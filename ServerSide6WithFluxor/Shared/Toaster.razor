@using Common.Models
@inherits FluxorComponent
@inject IMatToaster ToasterService

@code {

    protected override Task OnInitializedAsync()
    {
        SubscribeToAction<GenericErrorAction>(action => ToasterService.Add(action.Message, MatToastType.Danger, "Error"));
        SubscribeToAction<GenericWarningAction>(action => ToasterService.Add(action.Message, MatToastType.Warning, "Warning"));
        SubscribeToAction<GenericInfoAction>(action => ToasterService.Add(action.Message, MatToastType.Info, "Info"));

        SubscribeToAction<GenericSuccessAction>(action => ToasterService.Add(action.Message, MatToastType.Success));

        SubscribeToAction<GenericDarkAction>(action => ToasterService.Add(action.Message, MatToastType.Dark));
        SubscribeToAction<GenericPrimaryAction>(action => ToasterService.Add(action.Message, MatToastType.Primary));
        SubscribeToAction<GenericLightAction>(action => ToasterService.Add(action.Message, MatToastType.Light));
        SubscribeToAction<GenericLinkAction>(action => ToasterService.Add(action.Message, MatToastType.Link));

        return base.OnInitializedAsync();
    }

}